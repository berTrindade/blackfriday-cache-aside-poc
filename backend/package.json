{
    "name": "@blackfriday-poc/backend",
    "version": "1.0.0",
    "description": "Backend service implementing cache-aside pattern for Black Friday POC",
    "private": true,
    "type": "module",
    "main": "dist/server.js",
    "scripts": {
        "dev": "tsx watch src/server.ts",
        "build": "tsc",
        "start": "node dist/server.js",
        "test": "vitest",
        "test:watch": "vitest --watch",
        "test:ui": "vitest --ui",
        "test:coverage": "vitest --coverage",
        "lint": "eslint src --ext .ts,.tsx",
        "lint:fix": "eslint src --ext .ts,.tsx --fix",
        "type-check": "tsc --noEmit",
        "clean": "rm -rf dist"
    },
    "dependencies": {
        "fastify": "^4.28.1",
        "@fastify/cors": "^9.0.1",
        "drizzle-orm": "^0.33.0",
        "ioredis": "^5.4.1",
        "pg": "^8.12.0",
        "prom-client": "^15.1.3"
    },
    "devDependencies": {
        "@types/pg": "^8.10.7",
        "tsx": "^4.6.0",
        "vitest": "^1.0.0",
        "@vitest/coverage-v8": "^1.0.0",
        "@vitest/ui": "^1.0.0",
        "supertest": "^6.3.3",
        "@types/supertest": "^2.0.16"
    },
    "engines": {
        "node": ">=18.0.0"
    }
}